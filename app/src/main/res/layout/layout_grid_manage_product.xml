<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/name_product_manage_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brooklyn Nike"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/image_product_manage_iv"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/default_item_image"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_edit_product"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:cardCornerRadius="3dp"
                    android:layout_margin="4dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_edit"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/price_normal_manage_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strike_text"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="8sp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/price_sale_manage_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp. 170.000"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_delete_product"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:cardCornerRadius="3dp"
                    android:layout_margin="4dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_delete"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

