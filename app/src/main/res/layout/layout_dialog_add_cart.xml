<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_product_cart"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/blue_product"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/image_product_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:padding="20dp"
                    android:src="@drawable/default_item_image"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/name_product_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sweater Brooklyn Nike"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/free_sending_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gratis Pengiriman"
                    android:background="@drawable/border_corner_green"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="11sp"
                    android:visibility="gone"
                    android:layout_marginTop="2dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/blue_text"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/price_sale_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp. 230.000"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp"
                        android:layout_weight="0.2"/>

                    <TextView
                        android:id="@+id/price_wholesale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grosir"
                        android:background="@drawable/border_corner_pink"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="11sp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/pink_product"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:layout_weight="0.8"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/min_value_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_min_circle"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/value_product_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/add_value_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_circle"
                        android:padding="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/add_product_cart_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_product"
            android:text="Tambahkan"
            android:fontFamily="@font/poppins_medium"
            android:layout_margin="6dp"
            android:textSize="12sp"
            android:textAllCaps="false"/>


    </LinearLayout>



</RelativeLayout>